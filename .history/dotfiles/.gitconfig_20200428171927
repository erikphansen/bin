[user]
	name = Erik P. Hansen
	email = eph@erikphansen.com
[alias]
  co = checkout
  s = status
  com = commit -v
  b = branch
  l = log
  a = add
  aa = add .
  dt = difftool
  ri = rebase -i
  rid = rebase -i develop
  rim = rebase -i master
  graph = log --all --decorate --oneline --graph --date=relative
  graph2 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%ae>%Creset' --abbrev-commit --date=relative
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
  interactive = auto
[core]
	excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = vim
  pager = delta --plus-color="#012800" --minus-color="#340001"
[interactive]
  # diffFilter = delta --plus-color "#012800" --minus-color "#340001"
[difftool]
  prompt = false
[difftool "sourcetree"]
  cmd = /usr/local/bin/ksdiff -w \"$LOCAL\" \"$REMOTE\"
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "vscode"]
  cmd = code \"$LOCAL\" \"$REMOTE\" --diff --wait
[mergetool "sourcetree"]
  cmd = /usr/local/bin/ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[diff]
  tool = Kaleidoscope
  renames = true
[mergetool]
  prompt = false
[merge]
  tool = Kaleidoscope
[push]
  default = current
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
