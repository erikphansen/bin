releaseapps() {
  # set default vars in case no args are passed or $WOMPLY_DIR isn't set
  declare -a dirs=("gmd-insights" "bizshield-ui" "customer-analytics-ui" "angular-reputation-defense-ui" "launchpad-ui" "vault-ui" "feedback-ui" "ads-ui" "messenger-ui")

  project_dir="$HOME/womply"
  if [ $WOMPLY_DIR ]; then
    echo "WOMPLY_DIR is set to $WOMPLY_DIR"
    project_dir=$WOMPLY_DIR
  fi
  echo $project_dir
  # if we passed in args, use those in place of the default `dirs` var
  # if $argv > /dev/null
  #   dirs=$argv
  # fi
  currentDir=$(pwd)
  echo $currentDir
  # collect all the PR links that the `git pull-request` command spits out
  # this will be copied to the clipboard after making all the PRs
  links=""
  for dir in "${dirs[@]}"
  do
    cd $project_dir/$dir
    git checkout develop
    git pull
    timestamp=$(date +"%Y%m%d%H%M%S")
    git checkout -b release_$timestamp
    git push
    set pr_url $(hub pull-request -b master -m "Release $timestamp")
    set links "$links$pr_url"\n
    # delete the temp release branch
    git checkout develop
    git branch -D release_$timestamp
    echo 'You can find your PR at: $pr_url'
    echo '(That URL has been copied to your clipboard, as well)'
  done
  echo $links | pbcopy
  cd $currentDir

}
