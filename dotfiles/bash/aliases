# 
alias lsa='ls -hal'
alias ta='cd ~/tellapart'
alias db='cd ~/Dropbox'

# Utility
alias reload='source ~/Dropbox/bin/dotfiles/bash/aliases'
alias ea='subl -w ~/Dropbox/bin/dotfiles/bash/aliases && reload' # Edit aliases
alias ee="subl ~/Dropbox/bin/dotfiles/bash/env"

# cd to the path of the front Finder window
cdf()
{
	target=`osascript -e 'tell application "Finder" to get POSIX path of (target of front Finder window as text)'`
	cd "$target"
}
# open current path in Finder
alias f='open -a Finder ./'

# git aliases
alias gst='git status'
alias gl='git pull'
alias gf='git fetch'
alias gp='git push'
alias gd='git diff | mate'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias grom='git rebase origin/master'
alias gfr='gf; grom'
