export LANG=en_US.UTF-8       # Added so I can generate Octopress blogs from Diet Coda
export LC_ALL=en_US.UTF-8     # Added so I can generate Octopress blogs from Diet Coda
export EDITOR="mate -w"
export PATH=$PATH:~/bin

# Git tab completion via <https://sites.google.com/a/tellapart.com/eng/developer-info/git?pli=1#TOC-Hints-Tricks>
source /usr/local/git/contrib/completion/git-completion.bash
# Add RVM to PATH for scripting
PATH=$PATH:$HOME/.rvm/bin
# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"