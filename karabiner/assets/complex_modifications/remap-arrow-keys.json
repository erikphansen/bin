{
  "title": "Remap Arrow Keys",
  "rules": [
    {
      "description": "Disable left arrow key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ],
      "conditions": [
        {
          "type": "device_unless",
          "identifiers": [
            {
              "vendor_id": 7504
            }
          ]
        }
      ]
    },
    {
      "description": "Disable right arrow key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    },
    {
      "description": "Disable up arrow key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    },
    {
      "description": "Disable down arrow key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    },
    {
      "description": "Remap right arrow key to `fn` key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "any",
              "modifiers": [
                "fn"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap left arrow key to `fn` key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "any",
              "modifiers": [
                "fn"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap left arrow key to control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Remap right arrow key to control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ]
        }
      ]
    }
  ]
}
