{
  "title": "Shift + Hyper Key to toggle Caps Lock",
  "rules": [
    {
      "description": "Shift + Hyper Key to toggle Caps Lock",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
