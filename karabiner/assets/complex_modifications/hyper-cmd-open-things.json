{
  "title": "Hyper + Right ⌘ => Open Things",
  "rules": [
    {
      "description": "Hyper + Right ⌘ => Open Things",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_shift",
                "left_option",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a Things3"
            }
          ]
        }
      ]
    }
  ]
}
