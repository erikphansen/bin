{
  "title": "Caps Lock to ⌃ if held down or ⎋ if tapped in LaunchBar",
  "rules": [
    {
      "description": "Caps Lock to ⌃ if held down or ⎋ if tapped in LaunchBar",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["at.obdev.LaunchBar"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape",
              "modifiers": ["any"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
