{
  "title": "Press both Shift keys at the same time to toggle Caps Lock",
  "rules": [
    {
      "description": "Press both Shift keys at the same time to toggle Caps Lock",
      "manipulators": [
        {
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous": [
              {
                "key_code": "left_shift"
              },
              {
                "key_code": "right_shift"
              }
            ]
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "type": "basic",
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 25
          }
        }
      ]
    }
  ]
}
